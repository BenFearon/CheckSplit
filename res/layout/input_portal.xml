<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity = "center">
<RelativeLayout
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">  
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/twentyplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView20"
        android:text="+" />
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/twentyminus"
        android:text="0"
        android:textSize="52sp"/>
    <Button
        android:id="@+id/twentyminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="-" />

</RelativeLayout> 

<RelativeLayout
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">  
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/tenplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView10"
        android:text="+" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tenminus"
        android:text="0"
        android:textSize="52sp"/>
    <Button
        android:id="@+id/tenminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="-" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">  
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/fiveplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView5"
        android:text="+" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/fiveminus"
        android:text="0"
        android:textSize="52sp"/>
    <Button
        android:id="@+id/fiveminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="-" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">  
        <Button
        android:layout_marginTop="30dp"
        android:id="@+id/oneplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textView1"
        android:text="+" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/oneminus"
        android:text="0"
        android:textSize="52sp"/>
    <Button
        android:id="@+id/oneminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="-" />
</RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content">  
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add a User" />
</RelativeLayout>
</LinearLayout>